// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import 'footer'

body
  background: white

.inline-block
    display: inline-block

// Positioning
.relative
    position: relative

.absolute
    position: absolute
    
// Alerts
.alert
    text-align: center
    font-size: 18px;
    display: block
    padding: 5px 20px
    margin-bottom: 15px

.page-title 
    display: block
    min-height: 50px
    line-height: 50px
    text-align: center
    margin-bottom: 50px
    border-bottom: 1px solid #d4d4d4
    
.page-title 
    .inner
        width: 100%
        height: 50px
        bottom: -25px
        text-align: center
        
.page-title
    .inner
        .title-text
            padding: 5px 20px
            border-bottom: 2px solid #333
            border-radius: 5px
            background: #fff

#game-field
    padding-right: 15px
    border-right: 1px solid #efefef

.hold
    margin: 10px auto
    padding-top: 10px
    padding-bottom: 10px
    float: none
    
.game-cell
    width: 110px
    height: 110px
    border: 5px solid #9F1313
    float: left
    cursor: pointer
    font-size: 40px
    text-align: center
    line-height: 100px

.game-cell
    &:before
        display: block
        width: 100%
        height: 100%
        line-height: 100px
        text-align: center
        font-size: 60px
    &.sign-zero:before
        background: url('images/zero.png')
        background-size: 100px 100px
        content:''

    &.sign-cross:before
        background: url('images/cross.png')
        background-size: 100px 100px
        content:''

.game-cell[data-ypos="0"]
    border-top: none
    
.game-cell[data-ypos="2"]
    border-bottom: none
    
.game-cell[data-xpos="0"]
    border-left: none
    
.game-cell[data-xpos="2"]
    border-right: none
        
.game-cell.is-empty
    content: ''
    
// Forms

#form-names
    width: 360px
    display: block
    margin: 50px auto
 
label
    margin-bottom: 1px
    
.form-control
    border-bottom: 1px solid #333 !important
    border-radius: 5px !important
    border-top: none !important
    border-left: none !important
    border-right: none !important
    box-shadow: none !important
    text-align: center
    
.btn-success.big
    width: 120px
    height: 40px
    text-shadow: 1px 1px 1px #333
    display: block
    margin: 5px auto
    

// Stats

.stats
    ul
        list-style-type: none
        padding: 5px       
        margin: 0

.stats
    .player-info
        padding-bottom: 5px
        border-bottom: 1px solid #efefef
        
.stats
    ul.player-info
        li
            padding-left: 40px
            height: 35px
            line-height: 35px
            display: block

.stats
    ul
        li
            .mk
                display: block
                top: 2.5px
                left: 2.5px
                width: 30px
                height: 30px
                border-radius: 100px
                overflow: hidden
                &:before
                    display: block
                    width: 100%
                    height: 100%
                    line-height: 30px
                    text-align: center
                    font-size: 12px
                &.sign-zero:before
                    background: url('images/zero.png')
                    background-size: 30px
                    content:''

                &.sign-cross:before
                    background: url('images/cross.png')
                    background-size: 30px
                    content:''
            
.score
    li
        span
            height: 25px
            line-height: 25px
            
            &:nth-child(2)
                margin-left: 10px