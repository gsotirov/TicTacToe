// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import 'footer'


// your styles here:
body
  background: white

.alert
    text-align: center
    font-size: 22px;

.page-title
    font-size: 42px
    text-align: center

#gameField
    width: 300px
    margin: 0 50px 50px 0

table
    width: 750px !important
    
.gameCell
    width: 100px
    height: 100px
    border: 1px solid #d4d4d4
    float: left
    cursor: pointer
    font-size: 40px
    text-align: center
    line-height: 100px

.gameCell
    &:before
        display: block
        width: 100%
        height: 100%
        line-height: 100px
        text-align: center
        font-size: 60px
    &.sign-0:before
        background: rgba(34, 120, 167,0.3)
        color: #333
        content: sign-zero

    &.sign-1:before
        background: rgba(34, 167, 100, 0.3)
        color: #000
        content: sign-cross

th
    &:before
        display: block
        width: 100%
        height: 100%
        line-height: 35px
        text-align: center
        font-size: 30px
    &.sign-0:before
        background: rgba(34, 120, 167,0.3)
        color: #333
        content: sign-zero

    &.sign-1:before
        background: rgba(34, 167, 100, 0.3)
        color: #000
        content: sign-cross

.gameCell.is-empty
    content: ''
    
.gameCell.sign-zero
    background: rgba(34, 120, 167,0.3)
    color: #333
    content: sign-zero

.gameCell.sign-cross
    background: rgba(34, 167, 100, 0.3)
    color: #000
    content: sign-cross
    
   
td,th
    text-align: center
    line-height: 35px
    
th
    padding 0 !important
    
    
    
    
    
    
    